<div class="page-header">
  <%= link_to new_investment_path, :class => 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New Investment
  <% end %>
  <h1>Listing investments</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th>Term</th>
            <th>Interest rate</th>
            <th>Original issue</th>
            <th>Current outstanding</th>
            <th>Minimum order</th>
            <th>Denomination</th>
            <th>Maturity date</th>
            <th>Issue date</th>
            <th>Offer start period</th>
            <th>Offer end period</th>
            <th>User</th>
            <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @investments) do |investment| %>
            <td><%= investment.term %></td>
            <td><%= investment.interest_rate %></td>
            <td><%= investment.original_issue %></td>
            <td><%= investment.current_outstanding %></td>
            <td><%= investment.minimum_order %></td>
            <td><%= investment.denomination %></td>
            <td><%= investment.maturity_date %></td>
            <td><%= investment.issue_date %></td>
            <td><%= investment.offer_start_period %></td>
            <td><%= investment.offer_end_period %></td>
            <td><%= investment.user %></td>
            <td><%= link_to 'Show', investment %></td>
        <td><%= link_to 'Edit', edit_investment_path(investment) %></td>
        <td><%= link_to 'Destroy', investment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tbody>
  </table>
</div>
