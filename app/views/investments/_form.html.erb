<%= form_for(@investment, :html => { :class => "form-horizontal", :role => "form" }) do |f| %>
  <% if @investment.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4><%= pluralize(@investment.errors.count, "error") %> prohibited this investment from being saved:</h4>

      <ul>
      <% @investment.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :term, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :term, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :interest_rate, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :interest_rate, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :original_issue, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :original_issue, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :current_outstanding, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :current_outstanding, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :minimum_order, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :minimum_order, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :denomination, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :denomination, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :maturity_date, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.date_select :maturity_date, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :issue_date, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.date_select :issue_date, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :offer_start_period, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.date_select :offer_start_period, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :offer_end_period, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.date_select :offer_end_period, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :user, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :user, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit :class => "btn btn-primary" %>
    </div>
  </div>
<% end %>
