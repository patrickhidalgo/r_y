<%= form_for(@project, :html => {:class => "form-horizontal", :role => "form"}) do |f| %>
  <% if @project.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert">
        <span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4><%= pluralize(@project.errors.count, "error") %> prohibited this project from being saved:</h4>

      <ul>
        <% @project.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <% if current_user.admin? || current_user.manager? %>
      <%= f.label :format, :class => "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.text_field :format, :class => "form-control" %>
      </div>
      </div>
      <div class="form-group">
        <%= f.label :api_key, :class => "col-sm-2 control-label" %>
