          <%= f.text_field :api_key, :class => "form-control" %>
        </div>
      </div>
    <% end %>
    <div class="form-group">
      <%= f.label :system_capacity, :class => "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.text_field :system_capacity, :class => "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :module_type, :class => "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.number_field :module_type, :class => "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :losses, :class => "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.text_field :losses, :class => "form-control" %>
