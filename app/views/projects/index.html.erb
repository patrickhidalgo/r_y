<div class="page-header">
  <%= link_to new_project_path, :class => 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New Project
  <% end %>
  <h1>Listing projects</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th>Format</th>
            <th>Api key</th>
            <th>System capacity</th>
            <th>Module type</th>
            <th>Losses</th>
            <th>Array type</th>
            <th>Tilt</th>
            <th>Azimuth</th>
            <th>Address</th>
            <th>Lat</th>
            <th>Lon</th>
            <th>File</th>
            <th>Dataset</th>
            <th>Radius</th>
            <th>Timeframe</th>
            <th>Dc ac ratio</th>
            <th>Gcr</th>
            <th>Inv eff</th>
            <th>Callback</th>
            <th>Ac annual</th>
            <th>Solrad annual</th>
            <th>Npv</th>
            <th>Irr</th>
            <th>Project score</th>
            <th>Status</th>
            <th>User</th>
            <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @projects) do |project| %>
            <td><%= project.format %></td>
            <td><%= project.api_key %></td>
            <td><%= project.system_capacity %></td>
            <td><%= project.module_type %></td>
            <td><%= project.losses %></td>
            <td><%= project.array_type %></td>
            <td><%= project.tilt %></td>
            <td><%= project.azimuth %></td>
            <td><%= project.address %></td>
            <td><%= project.lat %></td>
            <td><%= project.lon %></td>
            <td><%= project.file_id %></td>
            <td><%= project.dataset %></td>
            <td><%= project.radius %></td>
            <td><%= project.timeframe %></td>
            <td><%= project.dc_ac_ratio %></td>
            <td><%= project.gcr %></td>
            <td><%= project.inv_eff %></td>
            <td><%= project.callback %></td>
            <td><%= project.ac_annual %></td>
            <td><%= project.solrad_annual %></td>
            <td><%= project.npv %></td>
            <td><%= project.irr %></td>
            <td><%= project.project_score %></td>
            <td><%= project.status %></td>
            <td><%= project.user %></td>
            <td><%= link_to 'Show', project %></td>
        <td><%= link_to 'Edit', edit_project_path(project) %></td>
        <td><%= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tbody>
  </table>
</div>
